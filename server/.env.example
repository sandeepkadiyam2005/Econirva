PORT=5001
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/econirva_erp
JWT_SECRET=replace-with-a-strong-secret
FRONTEND_URL=http://localhost:5173,https://app.econirva.com

# SaaS platform defaults
PLATFORM_ROOT_DOMAIN=econirva.com
DEFAULT_LOCALE=en
DEFAULT_CURRENCY=USD

# Storage provider: local | s3
STORAGE_PROVIDER=local
AWS_REGION=ap-south-1
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_ENDPOINT=
AWS_S3_PUBLIC_URL=
AWS_S3_FORCE_PATH_STYLE=false
S3_SERVER_SIDE_ENCRYPTION=AES256

# Enterprise SSO / OIDC placeholders
GOOGLE_OIDC_CLIENT_ID=
GOOGLE_OIDC_CLIENT_SECRET=
MICROSOFT_OIDC_CLIENT_ID=
MICROSOFT_OIDC_CLIENT_SECRET=
